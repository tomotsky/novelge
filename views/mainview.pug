doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title ノベルゲー
    link(rel="stylesheet", href="./views/style.css")
  body
    h1 あっという間に終わるノベルゲーム
    #mainimage
      img.image(src=image)
      p.message #{message}
    #answers
      each answer in answers
        .answer(style={"background-color": answer.bgcolor, color: answer.textcolor}) #{answer.answer}
          a(href=answer.goto)
    